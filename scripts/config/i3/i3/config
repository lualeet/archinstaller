#set $mod Mod4
set $mod Mod4

# Emoji picker
bindsym $mod+grave exec --no-startup-id ~/.local/bin/dmenuunicode

# dmenu mount
bindsym $mod+m exec --no-startup-id ~/.local/bin/dmenumount

# dmenu umount
bindsym $mod+Shift+m exec --no-startup-id ~/.local/bin/dmenuumount

# Lock screen
bindsym $mod+Control+Delete exec --no-startup-id i3lock -uc 21000f
# Custom program shortcuts
bindsym $mod+Shift+v exec --no-startup-id copyq menu
bindsym $mod+Shift+s exec --no-startup-id flameshot gui

bindsym $mod+Shift+w mode "Launcher"

mode "Launcher" {
    set $return mode "default"
    bindsym w exec --no-startup-id /usr/bin/vivaldi-stable; $return
    bindsym $mod+Shift+w exec --no-startup-id /usr/bin/vivaldi-stable; $return
    bindsym e exec --no-startup-id dolphin; $return
    bindsym d exec --no-startup-id discord; $return
    bindsym s exec --no-startup-id signal-desktop-beta; $return

    bindsym $mod+v split v
    bindsym $mod+c split h

    bindsym Escape $return
    bindsym Return $return
}

